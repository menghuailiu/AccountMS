<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="5dp"
    android:weightSum="1"
    android:id="@+id/itemInfo">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView1"
            style="@style/titleImage"
            android:src="@drawable/tubiao5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="我的账单"
            style="@style/textTitle"
            android:gravity="center_vertical|left"
            android:layout_toRightOf="@+id/imageView1"/>

        <TextView
            android:id="@+id/textview2"
            android:layout_width="fill_parent"
            android:layout_height="5px"
            android:layout_below="@id/imageView1"
            android:layout_marginTop="16px"
            android:background="#e7e4e5"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/bgmain">

        <TextView
            android:id="@+id/txinaccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="120dp"
            android:text="总  收  入:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/etinaccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="120dp"
            android:text=""
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txoutaccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="160dp"
            android:text="总  支  出:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/etoutaccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="160dp"
            android:text=""
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txbalance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="200dp"
            android:text="余       额:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/etbalance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="200dp"
            android:text=""
            android:textSize="18dp" />

    </RelativeLayout>

</LinearLayout>